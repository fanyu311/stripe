	<section class="features-icons bg-light text-center mt-5">
		<div class="container">
			<div class="row mt-5">
				<div class="col">
					<div class="card-body">
						<form action="{{ path('app.orders.payment', {'id': product.id }) }}" method="post" id="payment-form">
							<div class="form-row mt-5">
								<div id="card-elements">
									<div id="total-amount" data-amount="{{ totalAmount }}">
										Total Amount:
										{{ totalAmount }}
